{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "types": ["node"],
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "rootDirs": ["src"]
  },
  "exclude": ["node_modules", "test", ".cirrus.yml", ".prettierrc", "tsconfig.json", "tslint.json", ".git", "dist"]
}
