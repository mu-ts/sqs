{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",
    "outDir": "lib",
    "declaration": true,
    // "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    // "isolatedModules": false,
    // "strict": true,
    // "noImplicitAny": true,
    // "useUnknownInCatchVariables": false,
    // "inlineSourceMap": true

    "baseUrl": "src",
    "paths": {
      "@": [ "./" ],
    }
  },
  "ts-node": {
      "esm": true
  },
  // "lib": ["esnext"],
  "exclude": ["node_modules", "*.spec/**/*.spec.ts"],
  "include": ["src/**/*"]
}